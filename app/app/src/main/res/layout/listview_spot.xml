<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/listview_spot_list_cv"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/listview_spot_list_iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ripple_material_light"
                android:scaleType="centerCrop"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/listview_spot_list_tv_title"
                style="@style/SpotListItemText"
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:text="@string/spot_tv_placeholder"
                android:layout_height="50dp"
                android:paddingBottom="10dp"
                android:layout_gravity="bottom"
                android:layout_alignBottom="@+id/listview_spot_list_iv_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout"
                android:layout_marginBottom="5dp"
                android:layout_above="@+id/listview_spot_list_tv_title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/ivSpotListStar1"
                    android:layout_width="@dimen/spot_list_rating_star_size"
                    android:layout_height="@dimen/spot_list_rating_star_size"
                    android:src="@drawable/ic_action_favstar0"/>

                <ImageView
                    android:id="@+id/ivSpotListStar2"
                    android:layout_width="@dimen/spot_list_rating_star_size"
                    android:layout_height="@dimen/spot_list_rating_star_size"
                    android:src="@drawable/ic_action_favstar0"
                    android:layout_toRightOf="@+id/ivSpotListStar1"/>

                <ImageView
                    android:id="@+id/ivSpotListStar3"
                    android:layout_width="@dimen/spot_list_rating_star_size"
                    android:layout_height="@dimen/spot_list_rating_star_size"
                    android:src="@drawable/ic_action_favstar0"
                    android:layout_toRightOf="@+id/ivSpotListStar2"/>

                <ImageView
                    android:id="@+id/ivSpotListStar4"
                    android:layout_width="@dimen/spot_list_rating_star_size"
                    android:layout_height="@dimen/spot_list_rating_star_size"
                    android:src="@drawable/ic_action_favstar0"
                    android:layout_toRightOf="@+id/ivSpotListStar3"/>

                <ImageView
                    android:id="@+id/ivSpotListStar5"
                    android:layout_width="@dimen/spot_list_rating_star_size"
                    android:layout_height="@dimen/spot_list_rating_star_size"
                    android:src="@drawable/ic_action_favstar0"
                    android:layout_toRightOf="@+id/ivSpotListStar4"/>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/listview_spot_list_cv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/listview_spot_list_iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:background="@color/ripple_material_light"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/listview_spot_list_tv_title"
                style="@style/SpotListItemText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/listview_spot_list_iv_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom"
                android:paddingBottom="10dp"
                android:text="@string/spot_tv_placeholder" />

            <ImageView
                android:id="@+id/listview_spot_list_iv_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_alignParentTop="true" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/listview_spot_list_tv_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/ivSpotListStar1"
                    android:layout_width="@dimen/spot_list_rating_star_size"
                    android:layout_height="@dimen/spot_list_rating_star_size"
                    android:src="@drawable/ic_action_favstar0" />

                <ImageView
                    android:id="@+id/ivSpotListStar2"
                    android:layout_width="@dimen/spot_list_rating_star_size"
                    android:layout_height="@dimen/spot_list_rating_star_size"
                    android:layout_toRightOf="@+id/ivSpotListStar1"
                    android:src="@drawable/ic_action_favstar0" />

                <ImageView
                    android:id="@+id/ivSpotListStar3"
                    android:layout_width="@dimen/spot_list_rating_star_size"
                    android:layout_height="@dimen/spot_list_rating_star_size"
                    android:layout_toRightOf="@+id/ivSpotListStar2"
                    android:src="@drawable/ic_action_favstar0" />

                <ImageView
                    android:id="@+id/ivSpotListStar4"
                    android:layout_width="@dimen/spot_list_rating_star_size"
                    android:layout_height="@dimen/spot_list_rating_star_size"
                    android:layout_toRightOf="@+id/ivSpotListStar3"
                    android:src="@drawable/ic_action_favstar0" />

                <ImageView
                    android:id="@+id/ivSpotListStar5"
                    android:layout_width="@dimen/spot_list_rating_star_size"
                    android:layout_height="@dimen/spot_list_rating_star_size"
                    android:layout_toRightOf="@+id/ivSpotListStar4"
                    android:src="@drawable/ic_action_favstar0" />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>